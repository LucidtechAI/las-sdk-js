{
    "env": {
        "es6": true,
        "jest/globals": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "path": ["src"],
                "extensions": [".ts"]
            }
        }
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
        "max-len": ["warn", { "code": 120 }]
    }
}
